<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="log"
            type="jp.sugnakys.usbserialconsole.data.LogItem" />

        <variable
            name="timeFormat"
            type="String" />

        <variable
            name="timeVisibility"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/received_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/textview_horizontal_margin"
            android:paddingEnd="@dimen/textview_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:timeFormat="@{timeFormat}"
            app:timestamp="@{log.timestamp}"
            app:visibleOrGone="@{timeVisibility}" />

        <TextView
            android:id="@+id/received_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/textview_horizontal_margin"
            android:paddingEnd="@dimen/textview_horizontal_margin"
            android:text="@{log.text}"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</layout>
