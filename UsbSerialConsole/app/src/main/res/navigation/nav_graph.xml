<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="jp.sugnakys.usbserialconsole.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_logListFragment"
            app:destination="@id/logListFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="jp.sugnakys.usbserialconsole.settings.SettingsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_serialPortPreferenceFragment"
            app:destination="@id/serialPortPreferenceFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_displayPreferenceFragment"
            app:destination="@id/displayPreferenceFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_connectionPreferenceFragment"
            app:destination="@id/connectionPreferenceFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_licenseDialogFragment"
            app:destination="@id/licenseDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/serialPortPreferenceFragment"
        android:name="jp.sugnakys.usbserialconsole.settings.SerialPortPreferenceFragment"
        android:label="@string/app_name"/>

    <fragment
        android:id="@+id/displayPreferenceFragment"
        android:name="jp.sugnakys.usbserialconsole.settings.DisplayPreferenceFragment"
        android:label="@string/app_name"/>

    <fragment
        android:id="@+id/connectionPreferenceFragment"
        android:name="jp.sugnakys.usbserialconsole.settings.ConnectionPreferenceFragment"
        android:label="@string/app_name"/>

    <fragment
        android:id="@+id/licenseDialogFragment"
        android:name="jp.sugnakys.usbserialconsole.settings.LicenseDialogFragment"
        android:label="@string/app_name"/>

    <fragment
        android:id="@+id/logListFragment"
        android:name="jp.sugnakys.usbserialconsole.LogListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_log_list">
        <action
            android:id="@+id/action_logListFragment_to_logViewFragment"
            app:destination="@id/logViewFragment" />
    </fragment>

    <fragment
        android:id="@+id/logViewFragment"
        android:name="jp.sugnakys.usbserialconsole.LogFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_log">
        <argument
            android:name="uriString"
            app:argType="string" />
    </fragment>

</navigation>